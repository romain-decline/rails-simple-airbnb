<div class="container mt-5">
  <div class="card shadow-lg p-4 rounded-3">
    <div class="card-header bg-primary text-white">
      <h2 class="text-center mb-0">Edit <%= @flat.name %>üè°</h2>
    </div>
    <div class="card-body">
      <%= simple_form_for(@flat) do |f| %>
        <%= f.input :name, input_html: { class: 'form-control' } %>
        <%= f.input :address, input_html: { class: 'form-control' } %>
        <%= f.input :description, input_html: { class: 'form-control' } %>
        <%= f.input :price_per_night, input_html: { class: 'form-control' } %>
        <%= f.input :number_of_guests, input_html: { class: 'form-control' } %>

        <div class="text-center mt-3">
          <%= f.button :submit, "Create Flat ‚ú®", class: "btn btn-success w-100" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
