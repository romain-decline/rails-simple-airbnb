<div class="row g-4">
  <% @flats.each do |flat| %>
      <div class="col-md-4">
        <div class="flat-card p-3">
          <div class="flat-card-image" style="background-image: url('https://www.redfin.com/blog/wp-content/uploads/2022/07/what-is-a-flat-exterior.jpg')"></div>
          <div class="flat-card-content bg-light">
            <img src="https://www.redfin.com/blog/wp-content/uploads/2022/07/what-is-a-flat-exterior.jpg" class="card-img-top mb-2" alt="Flat image">
            <div class="flat-card-title">
              <h4><%=  flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <p><%= flat.description %></p>
            <div class="d-flex">
              <div class="d-flex align-items-center me-3 m-2 p-2">
                <i class="fa-solid fa-people-line me-2"></i>
                <span><%= flat.number_of_guests %></span>
              </div>
              <div class="d-flex align-items-center me-3">
                <i class="fa-solid fa-euro-sign me-2"></i>
                <span><%= flat.price_per_night %></span>
              </div>
              <div class="d-flex align-items-center ms-auto p-2">
                <%= link_to flat_path(flat), class:"me-3 text-primary" do %>
                  <i class="fa-solid fa-eye"></i>
                <% end %>
                <%= link_to edit_flat_path(flat), class:"me-3 text-warning" do %>
                  <i class="fa-solid fa-pen"></i>
                <% end %>
                <%= link_to flat_path(flat), data: { turbo_method: "delete", turbo_confirm: "Are you sure?" }, class: "me-3 text-danger" do %>
                  <i class="fa-solid fa-trash"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>
